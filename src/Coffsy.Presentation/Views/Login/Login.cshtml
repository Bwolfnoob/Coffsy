@{
    Layout = "_LayoutLogin";
}

@model  Coffsy.Application.ViewModels.UserViewModel


<div class="container">
    <div class="row vertical-center">
        <div class="col-md-4 col-md-offset-7">
            <div class="login-panel panel panel-default ">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align:center">
                        <img src="~/images/logo_verde_pad.png" /></h3>
                </div>
                <div class="panel-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert"></div>
                    }

                    <form asp-controller="Account" asp-action="Login">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Usuário" name="Username" type="text" autofocus />
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Senha" name="Senha" type="password">
                        </div>
                        <button type="submit" class="btn btn-lg btn-success btn-block">Entrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>